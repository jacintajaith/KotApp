<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/us"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@color/colorPrimary"
    tools:context="com.example.jacintajaith.kotapp.Welcome">

    <TextView
        android:id="@+id/well"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="welcome to programming using kotlin."
        android:textSize="21sp" />
    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/well"
        android:layout_below="@+id/well"
        android:layout_marginStart="42dp"
        android:layout_marginTop="24dp"
        android:text="User name" />

    <EditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/user"
        android:layout_marginTop="20dp"
        android:hint="Please enter your username" />

    <Button
        android:id="@+id/btn_on_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:text="load home page" />

    <TextView
        android:id="@+id/pword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/user"
        android:layout_below="@+id/input"
        android:layout_marginTop="24dp"
        android:text="Enter your password" />

    <EditText
        android:id="@+id/ps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_on_click"
        android:layout_below="@+id/pword"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:inputType="textPassword" />

</RelativeLayout>
